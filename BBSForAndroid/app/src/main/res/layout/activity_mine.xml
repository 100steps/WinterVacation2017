<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.bbt.bbsforandroid.View.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"/>

    <RelativeLayout
        android:id="@+id/user_name_title"
        android:layout_below="@id/title"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="用户名"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/title_left_margin" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:text="Rainbow"
            android:layout_marginEnd="@dimen/title_right_margin"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_gender_title"
        android:layout_below="@id/user_name_title"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="性别"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/title_left_margin"/>

        <TextView
            android:id="@+id/user_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/title_right_margin"
            android:text="男"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_email_title"
        android:layout_below="@id/user_gender_title"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="邮箱"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/title_left_margin"/>

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:text="1274200453@qq.com"
            android:layout_marginEnd="@dimen/title_right_margin"/>
    </RelativeLayout>



</RelativeLayout>